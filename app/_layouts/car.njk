{% extends "base.njk" %}

{% block main %}

  <div class="cta-call">
    <p>Questions? Get in touch</p>
    <p>
      <a href="tel:01204916044" class="cta-call__link">
        <span class="cta-call__icon"><img src="/assets/images/call_icon.png" alt=""/></span>
        <span class="cta-call__label">
          <span class="webfont-a">CALL US NOW</span>
          <span class="icon-arrow-long-right"></span></span>
      </a>
    </p>
  </div>

  <div class="background-splash background-splash--showroom">

    <section class="showroom">

      <header class="showroom__header">
        <div class="showroom__header__back">
          <a href="/showroom/" class="showroom__header__back__link">
            <span class="icon-level-up"></span></a>
        </div>
        <h2 class="showroom__header__title">Showroom</h2>
      </header>

      <div class="showroom-car">

        <div class="showroom-car__header">
          <h2 class="showroom-car__header__title">
            {{ make }} &ndash; {{ model }}
          </h2>
        </div>

        <div class="grid">

          <div class="grid__item one-whole gt-desktop--two-thirds">

            {% if main_image %}
            <div class="showroom-car__images">
              <div class="carousel carousel--car-item" data-slick='{"slidesToShow": 1, "slidesToScroll": 1, "dots": true}'>

                <div class="carousel__item">
                  <div class="carousel__item__thumb">
                    <img src='{{ main_image }}' alt="">
                  </div>
                </div>

                {% if images %}
                {% for image in images %}
                  <div class="carousel__item">
                    <div class="carousel__item__thumb">
                      <img src='{{ image }}' alt="">
                    </div>
                  </div>
                {% endfor %}
                {% endif %}

              </div>
            </div>
            {% endif %}

            {% if price %}
            <div class="showroom-car__header">
              <div class="showroom-car__header__price">
                <div class="showroom-car__header__price__title">
						      This car can be yours for just
					      </div>
                <span class="showroom-car__header__price__inner">
                  <span class="showroom-car__header__price__inner__currency">&pound;</span>
                  <span class="showroom-car__header__price__inner__amount">{{ price.amount | d('99') }} {% if price.interval == "weekly" %}per week {% else %}per month{% endif %}</span>
                </span>
              </div>
            </div>
            {% endif %}

          </div>

          <div class="grid__item one-whole gt-desktop--one-third">

            <div class="showroom-car__features">
              <h2 class="showroom-car__subtitle">Key Details</h2>
              <dl class="features-list features-list--detail group">
                <dt>Make:</dt>
                <dd>{{ make }}</dd>
                <dt>Model:</dt>
                <dd>{{ model }}</dd>
                <dt>Submodel:</dt>
                <dd>{{ submodel }}</dd>
                <dt>Mileage:</dt>
                <dd>{{ milage }}</dd>
                <dt>Fuel type:</dt>
                <dd>{{ fuel_type }}</dd>
                <dt>Transmission:</dt>
                <dd>{{ transmission }}</dd>
                <dt>Registration:</dt>
                <dd>{{ title }}</dd>
              </dl>
            </div>

            <div class="showroom-car__features">
              <h2 class="showroom-car__subtitle">Features</h2>
              <ul class="car-features">
                {% for item in features %}
                  <li>{{ item.feature }}{% if not loop.last %}, {% endif %}</li>
                {% endfor %}
              </ul>
            </div>

          </div>

        </div>

      </div>
    </section>

    <div class="car-apply-cta-panel">

      <div class="cta-block">
        <a href="/apply/" class="cta-button cta-button--alt2">
          <span class="cta-button__text">Apply for this Car</span>
          <span class="icon-arrow-long-right"></span>
        </a>
      </div>

